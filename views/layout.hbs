<!DOCTYPE html>
<head>
<title>CRS</title>
<link rel="stylesheet" href="/stylesheet/layout.css">
<script src="https://code.iconify.design/2/2.2.1/iconify.min.js"></script>
<script src="/javascript/layout.js"></script>
</head>
<body>
    <header>
        <nav>
            <div class="container">
                <ul class="nav_items">
                    <li class="nav_item">
                        <a href="/home" class="nav_logo">CRS</a>
                    </li>
                    <li class="nav_item">
                        <a href="/home" class="nav_link">Home</a>
                    </li>
                    <li class="nav_item">
                        <a href="#" class="nav_link">About</a>
                    </li>
                    <li class="nav_item">
                        <a href="#" class="nav_link">Contact</a>
                    </li>
                </ul>

                <div class="nav_dropdown">
                    <button class="nav_dropdown__btn" id="nav_dropdown__btn">
                        {{#if user}}
                            <span>welcome, {{user.name}}</span>
                        {{else}}
                            <span class="iconify" data-icon="ant-design:user-outlined"></span>
                        {{/if}}
                    </button>

                    <ul class="element_hidden" id="nav_dropdown__items">
                        {{#if user}}
                            <li class="nav_dropdown__item">
                                <a href="/api/logout" id="logOutBtn" class="nav_dropdown__link">
                                    <span class="iconify" data-icon="ant-design:user-delete-outlined"></span>
                                    <span>Log Out</span>
                                </a>
                            </li>
                        {{else}}
                            <li class="nav_dropdown__item">
                                <a href="#" id="openUserModalBtn" class="nav_dropdown__link">
                                    <span class="iconify" data-icon="ant-design:user-add-outlined"></span>
                                    <span>Sign Up or Log In</span>
                                </a>
                            </li>
                        {{/if}}
                    </ul>
                </div>
                
            </div>
        </nav>
    </header>

    <div class="main">
        {{{body}}}
    </div>
</body>
</html>