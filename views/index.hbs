{{!-- modal for user login and register --}}
<div id="userModal" class="modal element_notdisplay">
    <div class="modal_container">
        <div class="form_sidepic">
        </div>
        <form id="loginForm" class="user_form" action="/login" method="POST">
            <label>
                <span class="label">Username</span>
                <input name="username" id="loginUsername" class="user_input" type="text">
            </label>

            <label>
                <span class="label">Password</span>
                <input name="password" id="loginPassword" class="user_input" type="password">
            </label>

            <button id="logInBtn" class="user_btn">Login</button>

            <span>Don't have an account? <a href="#" class="user_link" id="registerLink">Register</a></span>
        </form>
            
        <form id="registerForm" class="user_form element_notdisplay" action="/register" method="POST">
            <label>
                <span class="label">Username</span>
                <input name="username" id="registerUsername" class="user_input" type="text">
            </label>

            <label>
                <span class="label">Name</span>
                <input name="name" id="name" class="user_input" type="text">
            </label>

            <label>
                <span class="label">Password</span>
                <input name="password" id="registerPassword" class="user_input" type="password">
            </label>

            {{!-- <label>
                <span class="label">Re-enter Password</span>
                <input name="re-entered_password" id="re-entered_password" type="password">
            </label> --}}

            <button id="registerBtn" class="user_btn">Register</button>

            <span>Already have an account? <a href="#" class="user_link" id="loginLink">Login</a></span>
        </form>

        <button id="userModalCloseBtn" class="modal_close_btn">
            <span class="iconify" data-icon="carbon:close"></span>
        </button>
    </div>
</div>

